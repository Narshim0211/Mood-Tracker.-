{
  "version": 2,
  "builds": [
    {
      "src": "moodtrackr/frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "moodtrackr/backend/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "moodtrackr/backend/api/index.js": { "runtime": "nodejs20.x" }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "moodtrackr/backend/api/index.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
